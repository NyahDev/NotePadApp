@using NotePadApp.ViewModels.Dto;
@model ConfirmPasswordDto

<!DOCTYPE html>
<html>

<head>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css">
    <style>
        html, body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: -webkit-box;
            display: flex;
            -ms-flex-align: center;
            -ms-flex-pack: center;
            -webkit-box-align: center;
            align-items: center;
            -webkit-box-pack: center;
            justify-content: center;
            background-color: #f5f5f5;
        }

        form {
            padding-top: 10px;
            font-size: 13px;
            margin-top: 30px;
        }

        .card-title {
            font-weight: 300;
        }

        .btn {
            font-size: 13px;
        }

        .login-form {
            width: 320px;
            margin: 20px;
        }

        .sign-up {
            text-align: center;
            padding: 20px 0 0;
        }

        span {
            font-size: 14px;
        }

        .submit-btn {
            margin-top: 20px;
        }
    </style>
</head>

<body>
    <div class="card login-form">
        <div class="card-body">
            <h3 class="card-title text-center">Change password</h3>

            <!-- Password must contain one lowercase letter, one number, and be at least 7 characters long. -->

            <div class="card-text">
                <form asp-action="ConfirmPassword" class="col s12" method="post">
                    @if (TempData["Error"] != null)
                    {
                        <div class="col-md-12 alert alert-danger">
                            <span><b>Sorry!</b> - @TempData["Error"]</span>
                        </div>
                    }

                    <!-- Add hidden fields for token and email -->
                    <input type="hidden" asp-for="Token" value="@Model.Token" />
                    <input type="hidden" asp-for="Email" value="@Model.Email" />

                    <div class="form-group">
                        <label asp-for="NewPassword">Your new password</label>
                        <input asp-for="NewPassword" type="password" class="form-control form-control-sm">
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Repeat password</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control form-control-sm">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block submit-btn">Confirm</button>
                </form>
            </div>
        </div>
    </div>
</body>
<script>

</script>

</html>
